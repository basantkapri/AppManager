<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.bashu.kapri.appmanager.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_permission"
        android:name="com.bashu.kapri.appmanager.ui.dashboard.PermissionsFragment"
        android:label="@string/title_permission"
        tools:layout="@layout/fragment_permission" />

    <fragment
        android:id="@+id/navigation_about"
        android:name="com.bashu.kapri.appmanager.ui.notifications.AboutFragment"
        android:label="@string/title_about"
        tools:layout="@layout/fragment_about" />
